  FormBox[
   RowBox[{
    SubscriptBox["t", 
     RowBox[{"n", " "}]], " ", 
    RowBox[{"(", 
     RowBox[{
      RowBox[{"n", "=", " ", "0"}], ",", "1", ",", "2", ",", "..."}], ")"}]}],
